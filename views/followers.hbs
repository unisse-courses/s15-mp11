{{> profile}}
<!-- *******************************************  Followers  ******************************************* !-->
						<div id="followers">
							<div class="d-flex">
								<div class="userReply w-100 p-2 mx-3 px-3" style="height: max-content;">
									Followers
								</div>
							</div>

							<div class="w-100" style="height: max-content;">
										
								<table class="table table-borderless">
									<tr>
										<td class="w-25" style="min-width: 300px;"></td>
										<td class="w-25" style="min-width: 250px;"></td>
										<td class="w-25" style="min-width: 250px;"></td>
										<td class="w-25" style="min-width: 250px;"></td>
									</tr>
										
									{{#if profile.followers }}
										{{#grouped_each 4 profile.followers }}
											<tr>
												{{#each this }}
													<td>
														<div class="d-flex border border-dark rounded" style="height: 84px;">
															<a href="/profile/{{this.url}}/overview">
														<img src="{{ this.img }}" class="h-100 border-right border-dark rounded" style="width: 90px;overflow:hidden;"></a>
															<div class="w-75 px-1 py-4">
																<span class="lead">{{ this.username }}</span>
										{{#if ../../session }}
											{{#validateCommentVoter ../../sessionID this.followers}}
											{{#validateUserComment ../../session this.username operator="!="}}
											<form action="/followUser" method="POST" id="followForm">
					<input type="hidden" name="profileID" id="profileID" value="{{ this._id }}">
					<button class="btn-sm btn btn-primary float-right" style="margin-top: -30px;">Follow</button>
				</form>
											{{/validateUserComment}}
											{{/validateCommentVoter}}
											{{#inverseValidateCommentVoter ../../sessionID this.followers}}
											<button class="btn-sm btn btn-secondary float-right">Followed</button>
											{{/inverseValidateCommentVoter}}
										{{/if}}
															</div>
														</div>
													</td>
												{{/each}}
											</tr>
										{{/grouped_each}}
									{{else}}
										<tr>
											<div class="m-3">No followers to display</div>
										</tr>
									{{/if}}
								</table>
							</div>
						</div>
					</div>
				</div>
<div class="d-flex">
	<div class="mx-auto pb-5" style="width: 60%;">
		<div class="">
			<h3>Start A Topic</h3>
			<form action="/createPost" method="POST" id="createPostForm">
				<div class="form-group">
					<label for="title" class="h6">Title</label>
					<input type="text" class="form-control" name="title" id="title" placeholder="Title">
				</div>
				<div class="form-group">
					<label for="category" class="h6">Category</label>
					<select class="form-control" id="category" name="category">
						<option value="" disabled selected>Select category....</option>
						<option value="Japanese">Japanese</option>
						<option value="American">American</option>
						<option value="Filipino">Filipino</option>
						<option value="Chinese">Chinese</option>
						<option value="French">French</option>
						<option value="Others">Others</option>
					</select>
				</div>
				<div class="form-group" style="width:max-content;">
					<label class="h6">Custom Picture</label>
					<input type="file" class="form-control-file" id="customPicture" name="customPicture">
				</div>
				<div class="form-group">
					<label for="content" class="h6">Content</label>
					<textarea class="ta w-100 form-control" name="content" id="content" form="createPostForm" placeholder="Type your message here...." style="height: 150px;"></textarea>
				</div>
				<button type="submit" class="btn btn-success float-right">Submit</button>
			</form>
		</div>
	</div>
	<div class="w-25 mx-auto" style="display: block;">
		<h3>Outlook</h3>
		<div class="w-100 mt-4">
			<div class="card h-100 shadow border border-dark">
				<div class="card-img-top">
					<img src="" class="postPicture">
				</div>
				<div class="card-footer contentContainer flex-fill border-top border-dark rounded-bottom">
					<div class="d-flex">
						<div class="w-100">
							<div class="font-weight-bold">Title</div>
							<div class="">By: Author</div>
						</div>
						<span class="mr-auto"></span>
						<div class="d-flex">
							<div class="d-flex mx-2">
								<p>0</p><i class="fas fa-comment-alt pt-1 ml-1"></i>
							</div>
							<div class="d-flex">
								<p>0</p><i class="fas fa-eye pt-1 ml-1"></i>
							</div>
						</div>
					</div>
				</div>
				<a href="#" class="stretched-link"></a>
			</div>
		</div>
	</div>
</div>
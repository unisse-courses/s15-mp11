{{> profile}}
<!-- *******************************************  Overview  ******************************************* !-->
						<div id="overview">
							<div class="d-flex">
								<div class="userReply w-75 p-2 mx-3 px-3" style="height: max-content;">
									Community Stats
								</div>

								<div class="bg-secondary rounded w-25 mr-3 text-center">
									<div class="font-weight-bold lead">{{ userScore }}</div>
									<div class="mb-1">{{ userRating }}</div>
								</div>
							</div>

							<div class="d-flex mx-5 my-2 lead small">
								<div class="text-right font-weight-bold" style="display: grid;">
									<span>Group</span>
									<span>Active Posts</span>
									<span>Profile Views</span>
									<span>Member Title</span>

									{{#if location }}
										<span>Location</span>
									{{/if}}

									{{#if about }}
										<span>About Me</span>
									{{/if}}

								</div>
								<div class="text-left mx-2" style="display: grid;">
									<span>{{ groupTitle }}</span>
									<span>{{ numPosts }}</span>
									<span>{{ numViews }}</span>
									<span>{{ memberTitle }}</span>

									{{#if location }}
										<span>{{ location }}</span>
									{{/if}}

									{{#if about }}
										<span>{{ about }}</span>
									{{/if}}

								</div>
							</div>
						</div>
						</div>
						</div>